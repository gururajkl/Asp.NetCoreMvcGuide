@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label class="p-0 mb-2" asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label class="p-0 mb-2" asp-for="DisplayOrder"></label>
            <input disabled asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Cancel</a>
            </div>
        </div>
    </div>
</form>

@* To add partial viewsk (The scripts section is created because it has some JS Scripts). *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}