@model Company
@{
    ViewData["Title"] = Model.Id == 0 ? "Create Company" : "Edit Company";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id == 0 ? "Create Company" : "Edit Company")</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input id="errorSpan" asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 my-2 col-12">
                            <input id="errorSpan" asp-for="StreetAddress" class="form-control border-0 shadow" />
                            <label asp-for="StreetAddress"></label>
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 my-2 col-12">
                            <input id="errorSpan" asp-for="City" class="form-control border-0 shadow" />
                            <label asp-for="City"></label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 my-2 col-12">
                            <input id="errorSpan" asp-for="State" class="form-control border-0 shadow" />
                            <label asp-for="State"></label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 my-2 col-12">
                            <input id="errorSpan" asp-for="PostalCode" class="form-control border-0 shadow" />
                            <label asp-for="PostalCode"></label>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 my-2 col-12">
                            <input id="errorSpan" asp-for="PhoneNumber" class="form-control border-0 shadow" />
                            <label asp-for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Id == 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* To add partial viewsk (The scripts section is created because it has some JS Scripts). *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons link lists searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
}