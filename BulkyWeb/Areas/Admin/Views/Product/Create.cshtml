@model ProductViewModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input id="errorSpan" asp-for="Product!.Title" class="form-control border-0 shadow" />
                    <label asp-for="Product!.Title"></label>
                    <span asp-validation-for="Product!.Title" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <textarea id="errorSpan" asp-for="Product!.Description" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Product!.Description"></label>
                    <span asp-validation-for="Product!.Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Product!.ISBN" class="form-control border-0 shadow" />
                    <label asp-for="Product!.ISBN"></label>
                    <span asp-validation-for="Product!.ISBN" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Product!.Author" class="form-control border-0 shadow" />
                    <label asp-for="Product!.Author"></label>
                    <span asp-validation-for="Product!.Author" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Product!.ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="Product!.ListPrice"></label>
                    <span asp-validation-for="Product!.ListPrice" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Product!.Price" class="form-control border-0 shadow" />
                    <label asp-for="Product!.Price"></label>
                    <span asp-validation-for="Product!.Price" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Product!.Price50" class="form-control border-0 shadow" />
                    <label asp-for="Product!.Price50"></label>
                    <span asp-validation-for="Product!.Price50" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Product!.Price100" class="form-control border-0 shadow" />
                    <label asp-for="Product!.Price100"></label>
                    <span asp-validation-for="Product!.Price100" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <select id="errorSpan" asp-for="Product!.CategoryId" asp-items="Model.CategoryList" class="form-select border-0 shadow">
                        <option selected disabled>Select Category</option>
                    </select>
                    <label asp-for="Product!.CategoryId"></label>
                    <span asp-validation-for="Product!.Price100" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Product!.ImageUrl" class="form-control border-0 shadow" />
                    <label asp-for="Product!.ImageUrl"></label>
                    <span asp-validation-for="Product!.ImageUrl" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* To add partial viewsk (The scripts section is created because it has some JS Scripts). *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}