@model Product
@{
    ViewData["Title"] = $"Edit {Model.Title}";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input id="errorSpan" asp-for="Title" class="form-control border-0 shadow" />
                    <label asp-for="Title"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="ISBN" class="form-control border-0 shadow" />
                    <label asp-for="ISBN"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Author" class="form-control border-0 shadow" />
                    <label asp-for="Author"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Price" class="form-control border-0 shadow" />
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Price50" class="form-control border-0 shadow" />
                    <label asp-for="Price50"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 my-2 col-12">
                    <input id="errorSpan" asp-for="Price100" class="form-control border-0 shadow" />
                    <label asp-for="Price100"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* To add partial viewsk (The scripts section is created because it has some JS Scripts). *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}